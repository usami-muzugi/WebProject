    <servlet-mapping>
        <servlet-name>Servlet</servlet-name>
        <url-pattern>/chapter2/test</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Demo4Servlet</servlet-name>
        <url-pattern>/chapter2/301</url-pattern>
