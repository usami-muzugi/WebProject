    </servlet>
    <servlet>
        <servlet-name>RegistServletTest</servlet-name>
        <servlet-class>chapter2.login.servlet.RegistServletTest</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistServletTest</servlet-name>
        <url-pattern>/chapter2/login/RegistServletTest</url-pattern>
